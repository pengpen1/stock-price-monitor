{
  "name": "stock-price-monitor",
  "version": "1.2.0",
  "private": true,
  "description": "股票监控助手 - 实时行情监控与AI分析",
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && venv\\Scripts\\python main.py",
    "start:frontend": "cd frontend && npm run dev",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && python -m venv venv && venv\\Scripts\\pip install -r requirements.txt",
    "build": "node -e \"require('child_process').execSync(process.platform === 'win32' ? 'scripts\\\\build-all.bat' : 'bash scripts/build-all.sh', {stdio: 'inherit'})\"",
    "build:win": "cd frontend && npm run build:win",
    "build:mac": "cd frontend && npm run build:mac",
    "build:linux": "cd frontend && npm run build:linux"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}
