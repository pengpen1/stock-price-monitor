{
  "name": "stock-monitor",
  "private": true,
  "version": "1.2.0",
  "description": "股票监控助手 - 实时行情监控与AI分析",
  "author": "Stock Monitor Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/pengpen1/stock-price-monitor.git"
  },
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "build:electron": "npm run build && electron-builder",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "axios": "^1.13.2",
    "echarts": "^6.0.0",
    "marked": "^17.0.1",
    "vue": "^3.5.24",
    "vue-echarts": "^8.0.1",
    "vue-i18n": "^9.14.5",
    "vue-mdr": "^0.0.14"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.4",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vue-tsc": "^3.1.4",
    "wait-on": "^9.0.3",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.stockmonitor.app",
    "productName": "股票监控助手",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "public/stock.ico",
      "extraResources": [
        {
          "from": "resources/stock-monitor-backend.exe",
          "to": "backend/stock-monitor-backend.exe"
        },
        {
          "from": "resources/data",
          "to": "backend/data"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "股票监控助手"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "public/stock.png",
      "extraResources": [
        {
          "from": "resources/stock-monitor-backend",
          "to": "backend/stock-monitor-backend"
        },
        {
          "from": "resources/data",
          "to": "backend/data"
        }
      ]
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "public/stock.png",
      "category": "Utility",
      "extraResources": [
        {
          "from": "resources/stock-monitor-backend",
          "to": "backend/stock-monitor-backend"
        },
        {
          "from": "resources/data",
          "to": "backend/data"
        }
      ]
    }
  }
}
